extends /layouts/inner.pug
block title
  title= t('views.pages.users.title')

block main
  .container
    .row.justify-content-center
      .p-3
        h1= t('views.pages.users.header')
    .row.justify-content-center
      .col-10.shadow-sm.p-3.mb-5.bg-white.rounded
        .table-responsive-sm
          table.table
            thead
              tr
                th(scope="col") Firstname 
                th(scope="col") LastName
                th(scope="col") Email
                th(scope="col" class="col-1")
            tbody
              each user in users
                tr
                  td= user.firstName
                  td= user.lastName
                  td= user.email
                  td(class="col-1")
                    button(class="btn btn-danger" data-toggle="modal" data-target=`#delete-${user.id}` value="Delete profile") Delete
                    .modal.fade(id=`delete-${user.id}` tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true")
                      .modal-dialog(role="document")
                        .modal-content
                          .modal-body
                            h5= t('views.pages.users.warning')
                          .modal-footer
                            button(type="button" class="btn btn-secondary" data-dismiss="modal") Close
                            a(href=`/users/${user.id}` data-method="delete" class="btn btn-danger") Delete