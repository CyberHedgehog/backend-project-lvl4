mixin alert(messages)
  -
    const alerts = {
      error: 'danger',
      success: 'success',
    }
  each items, type in messages
    each msg in items
      div(class=`alert alert-${alerts[type]} alert-dismissible fade show mt-2 mb-2 col-md-4 offset-md-4` role="alert")
        span= msg
        button(type="button" class="close" data-dismiss="alert" aria-label="Close") 
          span(aria-hidden="true") &times